# KaziAI Environment Configuration
# Copy to .env and fill in values

# --- LLM Provider ---
# Options: groq, openai, deepseek, ollama
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# Groq (default cloud provider)
GROQ_API_KEY=

# OpenAI (alternative cloud provider)
OPENAI_API_KEY=

# Ollama (local inference â€” no API key needed)
OLLAMA_BASE_URL=http://localhost:11434/v1

# --- Database ---
DATABASE_URL=postgresql://kaziai:password@localhost:5432/kaziai

# --- Redis & Celery ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- Auth ---
JWT_SECRET=change-this-to-a-random-secret
GOOGLE_CLIENT_ID=

# --- Server ---
HOST=0.0.0.0
PORT=8030
FRONTEND_PORT=3030
